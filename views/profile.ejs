<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/profile.css">
</head>

<body>
    <nav>
        <a href="/">Car Seller</a>
        <a href="/">Buy/Sell</a>
        <a href="/profile">Profile</a>
        <a href="/logout">logout</a>
    </nav>

    <form id="profrm" style="display: none;" action="/uploadit" enctype="multipart/form-data" method="POST">
        <input id="inputfile" type="file" name="proimg">
        <input type="submit">
    </form>
    <div id="container">
        <div id="dets">
            <div id="image">
                <img src=<%=adeatils.proimg %> alt="">
            </div>
            <div id="txt">
                <h2><%=adeatils.name %></h2>
                <button id="btn">change image</button>
            </div>
        </div>
        <div id="form">
            <h2>Make new car selling listing.</h2>
            <form action="/newcar" method="POST" enctype="multipart/form-data">
                <input type="text" placeholder="car's price" name="carprice">
                <input type="text" placeholder="car's name" name="carname">
                <input type="text" placeholder="contact" name="contact">
                <input type="file" name="carimg">
                <input type="submit">
            </form>
        </div>
        <div id="posts">
            <h3>Your Previous Entries</h3>
            <% adeatils.newcars.reverse().forEach(function(post){ %>
                <div class="post">
                    <img src=<%=post.carimg %> alt="some image">
                    <h3>Car's name:<%=post.carname %></h3>
                    <h3>Car's Pric:<%=post.carprice %></h3>
                    <a href="tel:<%=post.contact %>">Call Seller </a>
                    <a href="/deleteit/<%= post._id %>"> delete it</a>
                </div>
            <% }) %>
            <% console.log(adeatils) %>
        </div>
    </div>


    <script>
        document.querySelector('#btn').addEventListener('click',function(){
            document.querySelector('#inputfile').click();
        })
        document.querySelector('#inputfile').addEventListener('change',function(){
            document.querySelector('#profrm').submit();
        })


    </script>
</body>

</html>